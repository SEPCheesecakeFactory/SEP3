@using BlazorApp.Entities
@using BlazorApp.Utils
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager NavManager

<AuthorizeView>
    <Authorized Context="authContext">
        @{
    var user = authContext.User;
    int currentUserId = user.GetID() ?? 0;

    bool isAdmin = user.IsAdmin();
    bool isTeacher = user.IsTeacher(); 
    bool isAuthor = Course.AuthorId == currentUserId;
    bool isDraft = Course.ApprovedBy == null || Course.ApprovedBy == 0;

    
    bool canManageSteps = !isDraft && (isAuthor || (isAdmin && isTeacher));
    bool canEditMetadata = isAdmin || (isAuthor && !isDraft);
}


        <div class="col-md-6 col-lg-4">
            <div class="card card-course h-100 text-center bg-white position-relative @CourseDisplayUtils.GetBorderClass(Course.Category ?? "General")">

                @if (isDraft)
                {
                    <div class="position-absolute top-0 start-0 m-2" style="z-index: 10;">
                        <span class="badge bg-warning text-dark border border-warning shadow-sm"
                              style="font-size: 0.75rem; letter-spacing: 0.5px;" title="This course is pending approval">
                            <i class="fas fa-pencil-ruler me-1"></i> DRAFT
                        </span>
                    </div>
                }

                <div class="position-absolute top-0 end-0 m-2 d-flex gap-1" style="z-index: 11;">

                    @if (canManageSteps && OnManageSteps.HasDelegate)
                    {
                        <button class="btn btn-light text-primary action-btn border shadow-sm" title="Manage Lessons"
                                @onclick:stopPropagation="true" @onclick="() => OnManageSteps.InvokeAsync(Course.Id)">
                            <i class="fas fa-list-ol fa-sm"></i>
                        </button>
                    }

                    @if (canEditMetadata && OnEdit.HasDelegate)
                    {
                        <button class="btn btn-edit-card action-btn shadow-sm" title="Edit Course Details"
                                @onclick:stopPropagation="true" @onclick="() => OnEdit.InvokeAsync(Course)">
                            <i class="fas fa-pen fa-sm"></i>
                        </button>
                    }

                    @if (OnUnenroll.HasDelegate)
                    {
                        <button class="btn btn-sm btn-light text-danger shadow-sm action-btn" title="Unenroll"
                                @onclick="() => OnUnenroll.InvokeAsync(Course.Id)" @onclick:stopPropagation="true">
                            <i class="fas fa-trash-alt fa-xs"></i>
                        </button>
                    }
                </div>

                <div class="w-100 @CourseDisplayUtils.GetBgClass(Course.Category ?? "General")" style="height: 6px;"></div>

                <div class="p-4 d-flex flex-column align-items-center justify-content-center flex-grow-1 cursor-pointer"
                    @onclick="() => OnOpen.InvokeAsync(Course)">

                    <i class="@CourseDisplayUtils.GetIconClass(Course.Category ?? "General") fa-3x mb-3 @CourseDisplayUtils.GetTextClass(Course.Category ?? "General")"></i>

                    <h5 class="fw-bolder text-dark mb-1">@Course.Title</h5>

                    <div class="mb-2">
                        <span class="text-muted small">by <span class="fw-bold text-dark">@(Course.AuthorName ?? "Unknown")</span></span>
                    </div>

                    <small class="text-muted fw-bold text-uppercase mt-2" style="font-size: 0.75rem; letter-spacing: 1px;">
                        @Course.Description
                    </small>

                    <div class="w-100 mt-3">
                        @if (ProgressStep > Course.TotalSteps && Course.TotalSteps > 0)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                <i class="fas fa-check me-1"></i> Completed
                            </span>
                        }
                        else if (ProgressStep > 1 && Course.TotalSteps > 0)
                        {
                            double pct = ((double)(ProgressStep - 1) / Course.TotalSteps * 100);
                            <div class="d-flex align-items-center w-100">
                                <div class="progress flex-grow-1 rounded-pill" style="height: 10px;">
                                    <div class="progress-bar bg-primary rounded-pill" style="width: @((int)pct)%"></div>
                                </div>
                                <span class="ms-2 small fw-bold text-primary">@Math.Round(pct)%</span>
                            </div>
                        }
                        else
                        {
                            <span class="badge bg-light text-secondary border px-3 py-2 rounded-pill">Start</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    [Parameter, EditorRequired] public Course Course { get; set; } = default!;
    [Parameter] public int ProgressStep { get; set; } = 1;
    [Parameter] public EventCallback<Course> OnOpen { get; set; }
    [Parameter] public EventCallback<Course> OnEdit { get; set; }
    [Parameter] public EventCallback<int> OnUnenroll { get; set; }
    [Parameter] public EventCallback<int> OnManageSteps { get; set; }
}