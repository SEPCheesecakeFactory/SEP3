@using BlazorApp.Entities

<div class="row g-3 mb-4">
    <div class="col-md-8">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-white border-end-0 text-muted">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" 
                   class="form-control border-start-0 ps-0" 
                   placeholder="Search courses..."
                   value="@SearchQuery"
                   @oninput="OnSearchQueryChanged" />
        </div>
    </div>
    <div class="col-md-4">
        <select class="form-select shadow-sm" @onchange="OnCategoryChanged">
            <option value="">All Categories</option>
            @foreach (var cat in UniqueCategories)
            {
                <option value="@cat" selected="@(cat == SelectedCategory)">@cat</option>
            }
        </select>
    </div>
</div>

@code {
    [Parameter]
    public string SearchQuery { get; set; } = "";

    [Parameter]
    public string SelectedCategory { get; set; } = "";

    [Parameter, EditorRequired]
    public List<string> UniqueCategories { get; set; } = default!;

    [Parameter]
    public EventCallback<string> SearchQueryChanged { get; set; }

    [Parameter]
    public EventCallback<string> SelectedCategoryChanged { get; set; }

    private Task OnSearchQueryChanged(ChangeEventArgs e)
    {
        return SearchQueryChanged.InvokeAsync(e.Value?.ToString() ?? "");
    }

    private Task OnCategoryChanged(ChangeEventArgs e)
    {
        return SelectedCategoryChanged.InvokeAsync(e.Value?.ToString() ?? "");
    }
}