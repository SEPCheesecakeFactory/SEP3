<div class="d-flex flex-column">
    @if (ShowCreateError && !string.IsNullOrEmpty(CreateErrorMessage))
    {
        <div class="alert alert-danger mb-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Failed to create step:</strong> @CreateErrorMessage
        </div>
    }

    <div class="d-flex justify-content-between border-top pt-4 mt-4 mb-5">
        <button class="btn btn-outline-secondary px-4 py-3 border-2" @onclick="OnPrevious"
            disabled="@(CurrentStep <= 1)">
            PREVIOUS
        </button>

        @if (IsEditMode)
        {
            @if (IsLastStep)
            {
                <button class="btn btn-success px-4 py-3 border-2 @(ShowCreateError ? "btn-danger" : "")" 
                    @onclick="OnAddNewStep" disabled="@IsCreating">
                    @if (IsCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>CREATING...</span>
                    }
                    else
                    {
                        <i class="fas fa-plus me-2"></i>
                        <span>ADD NEW STEP</span>
                    }
                </button>
            }
            else
            {
                <button class="btn btn-outline-secondary px-4 py-3 border-2" @onclick="OnNext">
                    NEXT
                </button>
            }
        }
        else if (CanContinue)
        {
            @if (IsLastStep)
            {
                <button class="btn btn-success px-5 py-3 text-white" @onclick="OnFinish">
                    FINISH COURSE
                </button>
            }
            else
            {
                <button class="btn btn-primary px-5 py-3 text-white" @onclick="OnNext">
                    NEXT
                </button>
            }
        }
    </div>
</div>

@code {
    [Parameter] public int CurrentStep { get; set; }
    [Parameter] public int TotalSteps { get; set; } = 1;
    [Parameter] public bool IsEditMode { get; set; } = false;
    [Parameter] public bool CanContinue { get; set; } = true;
    [Parameter] public bool IsCreating { get; set; } = false;
    [Parameter] public bool ShowCreateError { get; set; } = false;
    [Parameter] public string? CreateErrorMessage { get; set; }
    [Parameter] public EventCallback OnPrevious { get; set; }
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnFinish { get; set; }
    [Parameter] public EventCallback OnAddNewStep { get; set; }

    private bool IsLastStep => CurrentStep >= TotalSteps;
}
