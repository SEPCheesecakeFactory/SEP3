@page "/courses/{CourseId:int}/steps/{StepOrder:int}/edit"
@using BlazorApp.Services
@using BlazorApp.Entities
@using Microsoft.AspNetCore.Authorization
@using System.Text.Json
@using AuthorizeView = Microsoft.AspNetCore.Components.Authorization.AuthorizeView
@using LearningStepHeader = BlazorApp.Components.LearningStepHeader;
@using StepNavigationButtons = BlazorApp.Components.StepNavigationButtons;

@inject ILearningStepService StepService
@inject ICourseService CourseService
@inject NavigationManager NavManager

<AuthorizeView>
    <Authorized>
        @if (Utils.AuthUtils.ConvertFromClaim(context.User.Claims.Single(c => c.Type == "Role").Value).Contains("teacher"))
        {
            <PageTitle>Edit Learning Step @StepOrder</PageTitle>

            @if (isLoading)
            {
                <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
                    <LoadingSpinner />
                </div>
            }
            else if (wasError)
            {
                <div class="d-flex flex-column h-100 mx-auto" style="max-width: 800px;">
                    <LearningStepHeader CurrentStep="@StepOrder" TotalSteps="@totalSteps" 
                        ShowProgressText="false" BottomMargin="4" />
                    
                    <div class="alert alert-danger mt-5 mx-auto" role="alert" style="max-width: 600px;">
                        An error occurred while loading the learning step. Please try again later.
                    </div>
                    
                    <StepNavigationButtons CurrentStep="@StepOrder" TotalSteps="@totalSteps" 
                        IsEditMode="true" CanContinue="true" IsCreating="@isCreatingStep"
                        ShowCreateError="@wasCreateError" CreateErrorMessage="@createErrorMessage"
                        OnPrevious="GoPrevious" OnNext="GoNext" OnAddNewStep="AddNewStep" />
                </div>
            }
            else if (currentStep != null)
            {
                <div class="d-flex flex-column h-100 mx-auto" style="max-width: 800px;">
                    <LearningStepHeader CurrentStep="@StepOrder" TotalSteps="@totalSteps" 
                        ShowProgressText="false" BottomMargin="4" />

                    <div class="card p-4 shadow-sm">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Step Type</label>
                            <input type="text" class="form-control" @bind-value="currentStep.Type" @bind-value:event="oninput"
                                placeholder="e.g. Video, Text, Quiz" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Content</label>
                            <textarea class="form-control" style="min-height: 100px; overflow-y: hidden; resize: none;"
                                @bind-value="currentStep.Content" @bind-value:event="oninput"
                                placeholder="Enter learning content..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end align-items-center mt-3">
                            <button class="btn btn-primary px-4 @(wasSavingError ? "btn-error" : "")" @onclick="Save"
                                disabled="@(!IsDirty || isSaving)">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Save Changes
                            </button>
                        </div>
                    </div>

                    <StepNavigationButtons CurrentStep="@StepOrder" TotalSteps="@totalSteps" 
                        IsEditMode="true" CanContinue="true" IsCreating="@isCreatingStep"
                        ShowCreateError="@wasCreateError" CreateErrorMessage="@createErrorMessage"
                        OnPrevious="GoPrevious" OnNext="GoNext" OnAddNewStep="AddNewStep" />

                    <div class="mb-5">
                        <button class="btn btn-outline-secondary" @onclick="BackToPreview">
                            Back to Preview
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
                <div class="alert alert-warning" role="alert">
                    You do not have permission to edit learning steps.
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
            <div class="alert alert-warning" role="alert">
                You must be logged in to edit learning steps.
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public int CourseId { get; set; }
    [Parameter] public int StepOrder { get; set; }

    private LearningStep? currentStep;
    private LearningStep? originalState;
    private int totalSteps = 1;

    private bool isLoading = true;
    private bool isSaving = false;
    private bool isCreatingStep = false;
    private bool wasError = false;
    private bool wasSavingError = false;
    private bool wasCreateError = false;
    private string? createErrorMessage = null;

    private bool IsDirty => currentStep != null && originalState != null &&
    (currentStep.Type != originalState.Type ||
    currentStep.Content != originalState.Content);

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        wasError = false;

        try
        {
            // Get total steps for the course
            var allCourses = await CourseService.GetCourses();
            var thisCourse = allCourses.FirstOrDefault(c => c.Id == CourseId);
            if (thisCourse != null && thisCourse.TotalSteps > 0)
            {
                totalSteps = thisCourse.TotalSteps;
            }

            var fetched = await StepService.GetLearningStepAsync(CourseId, StepOrder);

            originalState = fetched.DeepCopy();

            currentStep = fetched.DeepCopy();
        }
        catch
        {
            wasError = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoPrevious()
    {
        if (StepOrder > 1)
        {
            NavManager.NavigateTo($"/courses/{CourseId}/steps/{StepOrder - 1}/edit");
        }
    }

    private void GoNext()
    {
        NavManager.NavigateTo($"/courses/{CourseId}/steps/{StepOrder + 1}/edit");
    }

    private async Task Save()
    {
        if (!IsDirty || currentStep == null) return;

        isSaving = true;
        try
        {
            await UploadEdit(CourseId, StepOrder, currentStep);

            // Re-sync original state to new saved state to disable button
            originalState = currentStep.DeepCopy();
            wasSavingError = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving: {ex.Message}");
            wasSavingError = true;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task UploadEdit(int courseId, int stepOrder, LearningStep editedStep)
    {
        await StepService.UpdateLearningStepAsync(editedStep);
    }

    private async Task AddNewStep()
    {
        isCreatingStep = true;
        wasCreateError = false;
        createErrorMessage = null;
        StateHasChanged();

        try
        {
            var newStep = new LearningStep
            {
                CourseId = CourseId,
                StepOrder = totalSteps + 1,
                Type = "Text",
                Content = "Work in progress - edit this step to add content."
            };

            await StepService.CreateLearningStepAsync(newStep);
            
            // Update local totalSteps and navigate to edit the new step
            totalSteps++;
            NavManager.NavigateTo($"/courses/{CourseId}/steps/{newStep.StepOrder}/edit");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating new step: {ex.Message}");
            wasCreateError = true;
            createErrorMessage = ex.Message;
        }
        finally
        {
            isCreatingStep = false;
        }
    }

    private void BackToPreview()
    {
        NavManager.NavigateTo($"/courses/{CourseId}/steps/{StepOrder}");
    }
}