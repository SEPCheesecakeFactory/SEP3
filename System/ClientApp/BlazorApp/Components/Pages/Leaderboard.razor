@page "/leaderboard"
@using BlazorApp.Entities
@using BlazorApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject ICourseService CourseService
@inject NavigationManager NavMgr
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Leaderboard</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container" style="max-width: 700px;">

            <div class="text-center mb-5 mt-4">
                <h2 class="fw-bolder text-secondary">Leaderboard</h2>
                <p class="text-muted">See who is learning the most!</p>
            </div>

            @if (isLoading)
            {
                <div class="d-flex justify-content-center align-items-center" style="height:30vh;">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else if (entries == null || !entries.Any())
            {
                <div class="text-center text-muted py-4">
                    <h4 class="text-muted mb-0">No active learners yet. Be the first!</h4>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="list-group list-group-flush">
                        @foreach (var entry in entries)
                        {
                            <div
                                class="list-group-item d-flex align-items-center py-3 px-4 border-bottom-0 @GetRowClass(entry.Rank)">

                                <div class="me-4 text-center" style="width: 40px;">
                                    @if (entry.Rank == 1)
                                    {
                                        <i class="fas fa-trophy fa-2x text-warning"></i>
                                    }
                                    else if (entry.Rank == 2)
                                    {
                                        <i class="fas fa-medal fa-2x text-secondary"></i>
                                    }
                                    else if (entry.Rank == 3)
                                    {
                                        <i class="fas fa-medal fa-2x" style="color: #cd7f32;"></i>
                                    }
                                    else
                                    {
                                        <span class="fs-4 fw-bold text-muted">@entry.Rank</span>
                                    }
                                </div>

                                <div class="me-3">
                                    <div class="rounded-circle d-flex justify-content-center align-items-center fw-bold"
                                        style="width: 45px; height: 45px; background-color: #f7f7f7; color: #afafaf; border: 2px solid #eee;">
                                        @(entry.Username.Length > 0 ? entry.Username.Substring(0, 1).ToUpper() : "?")
                                    </div>
                                </div>

                                <div class="flex-grow-1">
                                    <h5 class="mb-0 fw-bold @(entry.Rank <= 3 ? "text-dark" : "text-secondary")">
                                        @entry.Username
                                    </h5>
                                </div>

                                <div class="text-end">
                                    <span class="fw-bold" style="color: #58cc02;"> @entry.TotalScore XP
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="text-center py-5 my-5 border rounded-3 bg-light">
            <i class="fas fa-trophy fa-3x text-primary mb-3"></i>
            <h2 class="fw-bold text-dark">Welcome to Learnify!</h2>
            <p class="lead text-muted mb-4">Please log in to track your score and compete on the leaderboard.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<LeaderboardEntry>? entries;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            try
            {
                entries = await CourseService.GetLeaderboardAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading leaderboard: {ex.Message}");
            }
            finally
            {
                isLoading = false;
            }
        }
        else
        {
            isLoading = false;
        }
    }

    private string GetRowClass(int rank)
    {
        return rank <= 3 ? "bg-light" : "bg-white";
    }
}