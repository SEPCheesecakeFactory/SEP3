@page "/approve-draft"
@using BlazorApp.Services
@using BlazorApp.Entities
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using BlazorApp.Utils
@inject ICourseService CourseService
@inject NavigationManager NavManager
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized>
        @if (context.User.IsAdmin())
        {
            <PageTitle>Approve Drafts</PageTitle>

            <div class="d-flex flex-column h-100 mx-auto" style="max-width: 800px;">

                
                @if (!string.IsNullOrWhiteSpace(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <div class="d-flex align-items-center mb-4 pt-2">
                    <a href="/all-courses" class="btn btn-link text-secondary p-0 me-4">
                        <i class="fas fa-times fa-2x"></i>
                    </a>
                    <h2 class="fw-bolder text-secondary mb-0">Waiting Drafts</h2>
                </div>

                @if (drafts == null)
                {
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (!drafts.Any())
                {
                    <div class="alert alert-info" role="alert">
                        No drafts waiting for approval.
                    </div>
                }
                else
                {
                    @foreach (var draft in drafts)
                    {
                        <div class="card p-4 shadow-sm mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h4 class="fw-bold mb-0">@draft.Title</h4>
                                <span class="badge bg-secondary text-uppercase" style="font-size: 0.75rem;">
                                    @(draft.Category ?? "General")
                                </span>
                            </div>

                            <div class="mb-3 text-muted small">
                                <span class="me-3">
                                    <i class="fas fa-user me-1"></i> Submitted by: 
                                    <span class="fw-bold text-dark">@(draft.AuthorName ?? "Unknown")</span>
                                </span>
                                <span>
                                    <i class="fas fa-globe me-1"></i> @draft.Language
                                </span>
                            </div>

                            <p class="text-secondary">@draft.Description</p>
                            
                            <div class="d-flex justify-content-end mt-3">
                                <button class="btn btn-success px-4" @onclick="() => Approve(draft.Id)">
                                    <i class="fas fa-check me-2"></i> Approve
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
                <div class="alert alert-warning" role="alert">
                    You do not have permission to approve drafts.
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
            <div class="alert alert-warning" role="alert">
                Please login to approve drafts.
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<Draft> drafts;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            errorMessage = null;

            var result = await CourseService.GetDrafts();

            if (result.HasError)
            {
                
                if (result.ErrorMessage == "NO_CONNECTION")
                {
                    errorMessage = "Cannot connect to the server. Please try again later.";
                }
                else
                {
                    errorMessage = result.ErrorMessage;
                }

                drafts = new List<Draft>();
                return;
            }

            var allDrafts = result.Value ?? new List<Draft>();
            drafts = allDrafts.Where(d => d.ApprovedBy == null || d.ApprovedBy == 0).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            errorMessage = "Unexpected error while loading drafts.";
            drafts = new List<Draft>();
        }
    }

    private async Task Approve(int draftId)
    {
        try
        {
            errorMessage = null;

            var authState = await AuthProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var idClaim = user.Claims.FirstOrDefault(c => c.Type == "Id");

            if (idClaim != null && int.TryParse(idClaim.Value, out int adminId))
            {
                var approveResult = await CourseService.ApproveDraft(draftId, adminId);

                if (approveResult.HasError)
                {
                    if (approveResult.ErrorMessage == "NO_CONNECTION")
                    {
                        errorMessage = "Cannot connect to the server. Please try again later.";
                    }
                    else
                    {
                       
                        errorMessage = approveResult.ErrorMessage;
                    }
                    return;
                }

                var refreshResult = await CourseService.GetDrafts();

                if (refreshResult.HasError)
                {
                    if (refreshResult.ErrorMessage == "NO_CONNECTION")
                    {
                        errorMessage = "Cannot connect to the server. Please try again later.";
                    }
                    else
                    {
                        errorMessage = refreshResult.ErrorMessage;
                    }
                    return;
                }

                var allDrafts = refreshResult.Value ?? new List<Draft>();
                drafts = allDrafts.Where(d => d.ApprovedBy == null || d.ApprovedBy == 0).ToList();
            }
            else
            {
                errorMessage = "Could not resolve admin ID from authentication.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error approving draft: {ex.Message}");
            errorMessage = "Unexpected error while approving the draft.";
        }
    }
}