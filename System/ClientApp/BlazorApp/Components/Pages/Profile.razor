@page "/profile"
@using BlazorApp.Auth
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using BlazorApp.Services
@inject NavigationManager navMgr

<AuthorizeView>
    <NotAuthorized>
        @* Updated to show only the message, relying on the sidebar's Log In button *@
        <div class="text-center py-5 my-5 border rounded-3 bg-light">
            <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
            <h2 class="fw-bold text-dark">Welcome to Learnify!</h2>
            <p class="lead text-muted mb-4">Please log in to view your profile.</p>
            @* Removed the dedicated Log In button here *@
        </div>
    </NotAuthorized>
    <Authorized Context="context">
        <div class="text-center mt-4">
            
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-warning text-dark border border-4 border-white shadow mb-3"
                 style="width: 120px; height: 120px; font-size: 3rem; font-weight: 800;">
                @GetInitials(context.User.FindFirst("Username")?.Value ?? "?")
            </div>
            
            <h2 class="fw-bolder text-dark mb-5">
                @(context.User.FindFirst("Username")?.Value ?? "User")
            </h2>

            @foreach (var claim in context.User.Claims.Where(c => c.Type == "Role"))
                {
                    @foreach (var role in Utils.AuthUtils.ConvertFromClaim(claim.Value))
                    {
                        <div class="col-12">
                            <div class="card border-2 rounded-4 p-3" style="border-color: var(--game-gray);">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="fw-bold text-secondary mb-1" style="letter-spacing: 0.5px;">
                                            ROLE
                                        </h5>
                                        <p class="mb-0 text-dark" style="font-size: 1.1rem;">@role</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
    </Authorized>
</AuthorizeView>

@code {
    private string userName = "";
    private string password = "";
    private string errorLabel = "";
    private bool isLoading = true;
    private async Task LoginAsync()
    {
        errorLabel = "";
        isLoading = true;
        try
        {
            await authService.LoginAsync(userName, password);
            navMgr.NavigateTo("/");
            isLoading = false;
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            errorLabel = $"Error: {e.Message}";
            isLoading = false;
        }
    }

    private string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName))
            return "";

        var names = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length == 1)
            return names[0][0].ToString().ToUpper();

        return (names[0][0].ToString() + names[^1][0].ToString()).ToUpper();
    }
}