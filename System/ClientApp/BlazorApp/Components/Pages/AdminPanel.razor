@page "/admin-panel"
@using BlazorApp.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using BlazorApp.Services
@using BlazorApp.Entities
@using BlazorApp.Utils
@using System.Security.Claims
@inject NavigationManager navMgr
@inject AuthenticationStateProvider AuthProvider
@inject IAuthService AuthService
@inject IUserService UserService
@inject ICourseService CourseService


<div class="container-fluid p-4">
    <div class="row mb-4 fade-in">
        <div class="col">
            <h1 class="display-4">Admin Panel</h1>
            <p class="lead">Manage your application settings and data here.</p>
        </div>
    </div>

    <AuthorizeView Roles="admin">
        <Authorized>
            
            @* --- 1. COURSE CATEGORIES --- *@
            <div class="card shadow-sm mb-4 fade-in" style="animation-delay: 0.1s;">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center" @onclick="() => isCategoriesExpanded = !isCategoriesExpanded" style="cursor: pointer;">
                    <h5 class="mb-0">Course Categories</h5>
                    <i class="bi @(isCategoriesExpanded ? "bi-chevron-up" : "bi-chevron-down")"></i>
                </div>
                @if (isCategoriesExpanded)
                {
                    <div class="card-body">
                        <div class="mb-4 p-4 bg-light rounded border">
                            <h6 class="fw-bold text-secondary text-uppercase mb-3" style="letter-spacing: 0.5px;">Create New Category</h6>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label fw-bold text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Name</label>
                                    <input type="text" class="form-control" placeholder="Category Name" @bind="newCategoryName" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Description</label>
                                    <input type="text" class="form-control" placeholder="Description" @bind="newCategoryDescription" />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button class="btn btn-success w-100 fw-bold text-uppercase" style="letter-spacing: 1px;" @onclick="CreateCategory">Create</button>
                                </div>
                            </div>
                        </div>

                        @if (categories == null)
                        {
                            <div class="d-flex justify-content-center p-3">
                                <div class="spinner-border text-primary" role="status"></div>
                            </div>
                        }
                        else if (!categories.Any())
                        {
                            <div class="alert alert-info">No categories found.</div>
                        }
                        else
                        {
                            <div class="row g-3">
                                @foreach (CourseCategory category in categories)
                                {
                                    <div class="col-md-4">
                                        <div class="card h-100 shadow-sm border-0 bg-white">
                                            <div class="card-body">
                                                <h6 class="fw-bold text-dark mb-2">@category.Name</h6>
                                                <p class="text-muted small mb-0">@category.Descritpion</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            @* --- 2. LANGUAGES (NEW) --- *@
            <div class="card shadow-sm mb-4 fade-in" style="animation-delay: 0.15s;">
                @* Using bg-success (Green) to differentiate from Categories *@
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center" 
                     @onclick="() => isLanguagesExpanded = !isLanguagesExpanded" style="cursor: pointer;">
                    <h5 class="mb-0">Languages</h5>
                    <i class="bi @(isLanguagesExpanded ? "bi-chevron-up" : "bi-chevron-down")"></i>
                </div>
                @if (isLanguagesExpanded)
                {
                    <div class="card-body">
                        <div class="mb-4 p-4 bg-light rounded border">
                            <h6 class="fw-bold text-secondary text-uppercase mb-3" style="letter-spacing: 0.5px;">Add New Language</h6>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label fw-bold text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Code (e.g. ENG)</label>
                                    <input type="text" class="form-control" placeholder="Code" maxlength="3" @bind="newLangCode" />
                                </div>
                                <div class="col-md-7">
                                    <label class="form-label fw-bold text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Name (e.g. English)</label>
                                    <input type="text" class="form-control" placeholder="Language Name" @bind="newLangName" />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button class="btn btn-success w-100 fw-bold text-uppercase" style="letter-spacing: 1px;" @onclick="CreateLanguage">Add</button>
                                </div>
                            </div>
                        </div>

                        @if (languages == null)
                        {
                            <div class="d-flex justify-content-center p-3">
                                <div class="spinner-border text-success" role="status"></div>
                            </div>
                        }
                        else if (!languages.Any())
                        {
                            <div class="alert alert-info">No languages found.</div>
                        }
                        else
                        {
                            <div class="row g-3">
                                @foreach (var lang in languages)
                                {
                                    <div class="col-md-3">
                                        <div class="card h-100 shadow-sm border-0 bg-white text-center">
                                            <div class="card-body py-3">
                                                <h6 class="fw-bold text-dark mb-1">@lang.Name</h6>
                                                <span class="badge bg-light text-secondary border">@lang.Code</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            @* --- 3. REGISTERED USERS --- *@
            <div class="card shadow-sm fade-in" style="animation-delay: 0.2s;">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center" @onclick="() => isUsersExpanded = !isUsersExpanded" style="cursor: pointer;">
                    <h5 class="mb-0">Registered Users</h5>
                    <i class="bi @(isUsersExpanded ? "bi-chevron-up" : "bi-chevron-down")"></i>
                </div>
                @if (isUsersExpanded)
                {
                    <div class="card-body">

                        @if (isLoading)
                        {
                            <div class="d-flex justify-content-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        }
                        else if (loadError)
                        {
                            <div class="alert alert-danger">
                                Error loading users. Please try again later.
                            </div>
                        }
                        else
                        {
                            <div class="mb-3 row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" placeholder="Filter by Username"
                                           @bind="usernameFilter" @bind:event="oninput" />
                                </div>
                                <div class="col-md-6">
                                    <input type="number" class="form-control" placeholder="Filter by ID" @bind="idFilter"
                                           @bind:event="oninput" />
                                </div>
                            </div>

                            <div class="d-flex flex-column gap-3">
                                @foreach (User user in FilteredUsers)
                                {
                                    <div class="card shadow-sm cursor-pointer" @onclick="() => ToggleUser(user.Id)"
                                         style="cursor: pointer; transition: all 0.2s ease;">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <span class="fw-bold text-secondary text-uppercase"
                                                          style="letter-spacing: 0.5px;">ID: @user.Id</span>
                                                    <span class="mx-2 text-muted">|</span>
                                                    <span class="fw-bolder text-dark">@user.Username</span>
                                                </div>
                                                <div>
                                                    <i class="bi @(expandedUserIds.Contains(user.Id) ? "bi-chevron-up" : "bi-chevron-down")"></i>
                                                </div>
                                            </div>

                                            @if (expandedUserIds.Contains(user.Id))
                                            {
                                                <div class="mt-4 pt-3 border-top">
                                                    <div class="d-flex gap-2 justify-content-end">
                                                        <button class="btn @(user.IsTeacher() ? "btn-danger" : "btn-outline-secondary") fw-bold text-uppercase"
                                                                style="letter-spacing: 1px; font-size: 0.8rem;"
                                                                @onclick:stopPropagation="true" @onclick="() => ToggleTeacherRole(user.Id)">
                                                            @(user.IsTeacher() ? "Remove Teacher" : "Add Teacher")
                                                        </button>
                                                        <button class="btn @(user.IsAdmin() ? "btn-danger" : "btn-primary") fw-bold text-uppercase"
                                                                style="letter-spacing: 1px; font-size: 0.8rem;"
                                                                @onclick:stopPropagation="true" @onclick="() => ToggleAdminRole(user.Id)">
                                                            @(user.IsAdmin() ? "Remove Admin" : "Add Admin")
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="alert alert-danger fade-in">
                <h4 class="alert-heading">Access Denied</h4>
                <p>You do not have permission to view this page. Please log in as an administrator.</p>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private bool isCategoriesExpanded = false;
    private bool isUsersExpanded = false;
    private bool isLanguagesExpanded = false; // ✅ Added State for Languages

    private int currentUserId = 0;
    private bool isLoading = true;
    private bool loadError = false;
    
    private List<User> users = new List<User>();
    private HashSet<int> expandedUserIds = new HashSet<int>();
    private string usernameFilter = "";
    private int? idFilter;
    
    // Categories
    private List<CourseCategory> categories = new List<CourseCategory>();
    private string newCategoryName = "";
    private string newCategoryDescription = "";

    // Languages
    private List<Language> languages = new List<Language>(); // ✅ Added List
    private string newLangCode = ""; // ✅ Added Input
    private string newLangName = ""; // ✅ Added Input

    // --- CATEGORY LOGIC ---
    private async Task CreateCategory()
    {
        if (string.IsNullOrWhiteSpace(newCategoryName)) return;

        try
        {
            await CourseService.CreateCategory(new CreateCourseCategoryDto 
            { 
                Name = newCategoryName, 
                Descritpion = newCategoryDescription 
            });
            categories = await CourseService.GetCategories();
            newCategoryName = "";
            newCategoryDescription = "";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating category: {ex.Message}");
        }
    }

    // --- LANGUAGE LOGIC (NEW) ---
    private async Task CreateLanguage()
    {
        if (string.IsNullOrWhiteSpace(newLangCode) || string.IsNullOrWhiteSpace(newLangName)) return;

        try
        {
            await CourseService.CreateLanguage(new CreateLanguageDto 
            { 
                Code = newLangCode.ToUpper(), // Ensure codes are uppercase (ENG, DK)
                Name = newLangName 
            });
            languages = await CourseService.GetLanguages();
            newLangCode = "";
            newLangName = "";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating language: {ex.Message}");
        }
    }

    // --- USER LOGIC ---
    private IEnumerable<User> FilteredUsers => users.Where(u =>
    (string.IsNullOrEmpty(usernameFilter) || u.Username.Contains(usernameFilter, StringComparison.OrdinalIgnoreCase)) &&
    (!idFilter.HasValue || u.Id == idFilter.Value)
    );

    private void ToggleUser(int userId)
    {
        if (expandedUserIds.Contains(userId))
        {
            expandedUserIds.Remove(userId);
        }
        else
        {
            expandedUserIds.Add(userId);
        }
    }

    private async Task ToggleTeacherRole(int userId)
    {
        var user = users.FirstOrDefault(u => u.Id == userId);
        if (user == null) return;

        var teacherRole = user.Roles.FirstOrDefault(r => r.RoleName == "teacher");
        if (teacherRole != null)
        {
            user.Roles.Remove(teacherRole);
        }
        else
        {
            user.Roles.Add(new Role { RoleName = "teacher" });
        }

        try
        {
            await UserService.UpdateUser(user.Id, user);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating user: {ex.Message}");
        }
    }

    private async Task ToggleAdminRole(int userId)
    {
        var user = users.FirstOrDefault(u => u.Id == userId);
        if (user == null) return;

        var adminRole = user.Roles.FirstOrDefault(r => r.RoleName == "admin");
        if (adminRole != null)
        {
            user.Roles.Remove(adminRole);
        }
        else
        {
            user.Roles.Add(new Role { RoleName = "admin" });
        }

        try
        {
            await UserService.UpdateUser(user.Id, user);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating user: {ex.Message}");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var idClaim = user.FindFirst("Id") ?? user.FindFirst(ClaimTypes.NameIdentifier);

        if (idClaim != null && int.TryParse(idClaim.Value, out int uid))
        {
            currentUserId = uid;
        }

        try
        {
            // Load all administrative data
            users = await UserService.GetUsers();
            categories = await CourseService.GetCategories();
            languages = await CourseService.GetLanguages(); // ✅ Load Languages
        }
        catch
        {
            loadError = true;
        }
        finally
        {
            isLoading = false;
        }
    }
}