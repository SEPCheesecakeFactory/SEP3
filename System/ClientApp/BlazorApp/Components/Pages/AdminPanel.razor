@page "/admin-panel"
@using BlazorApp.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using BlazorApp.Services
@using BlazorApp.Entities
@using BlazorApp.Utils
@using System.Security.Claims
@inject NavigationManager navMgr
@inject AuthenticationStateProvider AuthProvider
@inject IAuthService AuthService
@inject IUserService UserService


<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Admin Panel</h1>
            <p class="lead">Manage your application settings and data here.</p>
        </div>
    </div>

    <AuthorizeView Roles="admin">
        <Authorized>
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Registered Users</h5>
                </div>
                <div class="card-body">

                    @if (isLoading)
                    {
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (loadError)
                    {
                        <div class="alert alert-danger">
                            Error loading users. Please try again later.
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Filter by Username" @bind="usernameFilter" @bind:event="oninput" />
                            </div>
                            <div class="col-md-6">
                                <input type="number" class="form-control" placeholder="Filter by ID" @bind="idFilter" @bind:event="oninput" />
                            </div>
                        </div>

                        <div class="d-flex flex-column gap-3">
                            @foreach (User user in FilteredUsers)
                            {
                                <div class="card shadow-sm cursor-pointer" @onclick="() => ToggleUser(user.Id)" style="cursor: pointer; transition: all 0.2s ease;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="fw-bold text-secondary text-uppercase" style="letter-spacing: 0.5px;">ID: @user.Id</span>
                                                <span class="mx-2 text-muted">|</span>
                                                <span class="fw-bolder text-dark">@user.Username</span>
                                            </div>
                                            <div>
                                                <i class="bi @(expandedUserIds.Contains(user.Id) ? "bi-chevron-up" : "bi-chevron-down")"></i>
                                            </div>
                                        </div>

                                        @if (expandedUserIds.Contains(user.Id))
                                        {
                                            <div class="mt-4 pt-3 border-top">
                                                <div class="d-flex gap-2 justify-content-end">
                                                    <button class="btn @(user.Roles.Any(r => r.RoleName == "teacher") ? "btn-danger" : "btn-outline-secondary") fw-bold text-uppercase" style="letter-spacing: 1px; font-size: 0.8rem;" @onclick:stopPropagation="true" @onclick="() => ToggleTeacherRole(user.Id)">
                                                        @(user.Roles.Any(r => r.RoleName == "teacher") ? "Remove Teacher" : "Add Teacher")
                                                    </button>
                                                    <button class="btn @(user.Roles.Any(r => r.RoleName == "admin") ? "btn-danger" : "btn-primary") fw-bold text-uppercase" style="letter-spacing: 1px; font-size: 0.8rem;" @onclick:stopPropagation="true" @onclick="() => ToggleAdminRole(user.Id)">
                                                        @(user.Roles.Any(r => r.RoleName == "admin") ? "Remove Admin" : "Add Admin")
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="alert alert-danger">
                <h4 class="alert-heading">Access Denied</h4>
                <p>You do not have permission to view this page. Please log in as an administrator.</p>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private int currentUserId = 0;
    private bool isLoading = true;
    private bool loadError = false;
    private List<User> users = new List<User>();
    private HashSet<int> expandedUserIds = new HashSet<int>();
    private string usernameFilter = "";
    private int? idFilter;

    private IEnumerable<User> FilteredUsers => users.Where(u =>
        (string.IsNullOrEmpty(usernameFilter) || u.Username.Contains(usernameFilter, StringComparison.OrdinalIgnoreCase)) &&
        (!idFilter.HasValue || u.Id == idFilter.Value)
    );

    private void ToggleUser(int userId)
    {
        if (expandedUserIds.Contains(userId))
        {
            expandedUserIds.Remove(userId);
        }
        else
        {
            expandedUserIds.Add(userId);
        }
    }

    private async Task ToggleTeacherRole(int userId)
    {
        var user = users.FirstOrDefault(u => u.Id == userId);
        if (user == null) return;

        var teacherRole = user.Roles.FirstOrDefault(r => r.RoleName == "teacher");
        if (teacherRole != null)
        {
            user.Roles.Remove(teacherRole);
        }
        else
        {
            user.Roles.Add(new Role { RoleName = "teacher" });
        }

        try
        {
            await UserService.UpdateUser(user.Id, user);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating user: {ex.Message}");
        }
    }

    private async Task ToggleAdminRole(int userId)
    {
        var user = users.FirstOrDefault(u => u.Id == userId);
        if (user == null) return;

        var adminRole = user.Roles.FirstOrDefault(r => r.RoleName == "admin");
        if (adminRole != null)
        {
            user.Roles.Remove(adminRole);
        }
        else
        {
            user.Roles.Add(new Role { RoleName = "admin" });
        }

        try
        {
            await UserService.UpdateUser(user.Id, user);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating user: {ex.Message}");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var idClaim = user.FindFirst("Id") ?? user.FindFirst(ClaimTypes.NameIdentifier);

        if (idClaim != null && int.TryParse(idClaim.Value, out int uid))
        {
            currentUserId = uid;
        }

        try
        {
            users = await UserService.GetUsers();


        }
        catch
        {
            loadError = true;
        }
        finally
        {
            isLoading = false;
        }
    }
    // Add your admin panel logic here
}