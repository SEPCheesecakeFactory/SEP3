@startuml GR
!include https://raw.githubusercontent.com/fredoslav2004/MinimalThemePUML/refs/heads/main/minimal-theme.puml
scale 1

class Course
{
    id {PK}
    language {FK}
    title
    description
    category {FK}
}

class CourseCategory
{
    id {PK}
    name
    description
}

class Language
{
    code {PK}
    name
}

class User
{
    id {PK}
    username
    password_hash
    role
}

Course "*" -- "1" CourseCategory
Course "*" -- "1" Language