@startuml GR
!include https://raw.githubusercontent.com/fredoslav2004/MinimalThemePUML/refs/heads/main/minimal-theme.puml
scale 1

class Course
{
    id {PK}
    language {FK}
    title
    description
    category {FK}
}

class CourseCategory
{
    id {PK}
    name
    description
}

class Language
{
    code {PK}
    name
}

class LearningStepType
{
    id {PK}
    name
}

class LearningStep
{
    step_order {PPK}
    course {PPK, FK}
    type {FK}
    content
}

Course "*" -- "1" CourseCategory
Course "*" -- "1" Language