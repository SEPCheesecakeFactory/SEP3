{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "docTarget",
      "type": "pickString",
      "description": "Select what to rebuild",
      "options": [
        "ProjectDescription",
        "ProcessReport",
        "ProjectReport",
        "Combined",
        "All"
      ],
      "default": "All"
    }
  ],
  "tasks": [
    {
      "label": "Docs: Rebuild (choose)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\Documentation\\build-docs.ps1",
        "-Target",
        "${input:docTarget}"
      ],
      "options": { "cwd": "${workspaceFolder}\\Documentation" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Docs: Rebuild All + Combined",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\Documentation\\build-docs.ps1",
        "-Target",
        "All"
      ],
      "options": { "cwd": "${workspaceFolder}\\Documentation" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docs: Build Current Markdown",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\Documentation\\build-docs.ps1",
        "-Target",
        "Generic",
        "-File",
        "${file}"
      ],
      "options": { "cwd": "${workspaceFolder}\\Documentation" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run DataServer",
      "type": "shell",
      "command": "mvn exec:java",
      "options": {
        "cwd": "${workspaceFolder}/System/DataServer/DataServer"
      },
      "presentation": {
        "group": "system",
        "reveal": "always"
      }
    },
    {
      "label": "Run LogicServer",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/System/LogicServer/RESTAPI"
      },
      "presentation": {
        "group": "system"
      }
    },
    {
      "label": "Run ClientApp",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/System/ClientApp/BlazorApp"
      },
      "presentation": {
        "group": "system"
      }
    },
    {
      "label": "Start All Systems",
      "dependsOn": ["Run DataServer", "Run LogicServer", "Run ClientApp"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
