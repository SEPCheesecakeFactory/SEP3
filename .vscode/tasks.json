{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "docTarget",
      "type": "pickString",
      "description": "Select what to rebuild",
      "options": ["ProjectDescription","ProcessReport","ProjectReport","Combined","All"],
      "default": "All"
    }
  ],
  "tasks": [
    {
      "label": "Docs: Rebuild (choose)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy","Bypass",
        "-File",
        "${workspaceFolder}\\Documentation\\build-docs.ps1",
        "-Target","${input:docTarget}"
      ],
      "options": { "cwd": "${workspaceFolder}\\Documentation" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Docs: Rebuild All + Combined",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy","Bypass",
        "-File",
        "${workspaceFolder}\\Documentation\\build-docs.ps1",
        "-Target","All"
      ],
      "options": { "cwd": "${workspaceFolder}\\Documentation" },
      "group": "build",
      "problemMatcher": []
    }
  ]
}
