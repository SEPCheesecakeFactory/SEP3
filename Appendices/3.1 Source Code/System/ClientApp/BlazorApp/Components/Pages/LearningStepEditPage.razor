@page "/courses/{CourseId:int}/steps/{StepOrder:int}/edit"
@using BlazorApp.Services
@using BlazorApp.Entities
@using BlazorApp.Utils
@using Microsoft.AspNetCore.Authorization
@using System.Text.Json
@using AuthorizeView = Microsoft.AspNetCore.Components.Authorization.AuthorizeView
@using LearningStepHeader = BlazorApp.Components.LearningStepHeader;
@using StepNavigationButtons = BlazorApp.Components.StepNavigationButtons;

@inject ILearningStepService StepService
@inject ICourseService CourseService
@inject NavigationManager NavManager

<AuthorizeView>
    <Authorized>
        @if (context.User.IsTeacher())
        {
            <PageTitle>Edit Learning Step @StepOrder</PageTitle>

            @if (isLoading)
            {
                <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
                    <LoadingSpinner />
                </div>
            }
            else if (wasError)
            {
                <div class="d-flex flex-column h-100 mx-auto" style="max-width: 800px;">
                    <LearningStepHeader CurrentStep="@StepOrder" TotalSteps="@totalSteps" ShowProgressText="false"
                        BottomMargin="4" />

                    <div class="alert alert-danger mt-5 mx-auto" role="alert" style="max-width: 600px;">
                        An error occurred while loading the learning step. Please try again later.
                    </div>

                    <StepNavigationButtons CurrentStep="@StepOrder" TotalSteps="@totalSteps" IsEditMode="true"
                        CanContinue="true" IsCreating="@isCreatingStep" ShowCreateError="@wasCreateError"
                        CreateErrorMessage="@createErrorMessage" OnPrevious="GoPrevious" OnNext="GoNext"
                        OnAddNewStep="AddNewStep" />
                </div>
            }
            else if (currentStep != null)
            {
                <div class="d-flex flex-column h-100 mx-auto" style="max-width: 800px;">
                    
                    <LearningStepHeader CurrentStep="@StepOrder" TotalSteps="@totalSteps" ShowProgressText="false"
                        BottomMargin="4" />

                    <div class="edit-card p-4 p-md-5 mb-4 fade-in">
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted text-uppercase">Step Type</label>
                            <select class="form-select game-input" value="@currentStep.Type" @onchange="OnTypeChanged">
                                <option value="" disabled>Select Type...</option>
                                <option value="Text">Text Content</option>
                                <option value="Video">Video Embed</option>
                                <option value="QuestionMC">Multiple Choice Question</option>
                                <option value="QuestionFILL">Fill in the Blank</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted text-uppercase">Content</label>
                            
                            <textarea class="form-control game-input" 
                                      style="min-height: 150px; resize: vertical;"
                                      @bind-value="currentStep.Content" 
                                      @bind-value:event="oninput"
                                      placeholder="Enter learning content..."></textarea>
                            
                            <div class="form-text text-muted small mt-2 d-flex align-items-start">
                                <i class="fas fa-info-circle me-2 mt-1"></i>
                                <div>
                                    @if (currentStep.Type == "QuestionMC")
                                    {
                                        <span><strong>Rule:</strong> The first answer after the pipe <code>|</code> is always the correct one. We shuffle them automatically for the learner.</span>
                                    }
                                    else if (currentStep.Type == "QuestionFILL")
                                    {
                                        <span><strong>Rule:</strong> Use three underscores <code>___</code> to create the gap. The text after the pipe <code>|</code> is the hidden answer.</span>
                                    }
                                    else if (currentStep.Type == "Video")
                                    {
                                        <span><strong>Tip:</strong> Paste the full YouTube URL.</span>
                                    }
                                    else
                                    {
                                        <span><strong>Tip:</strong> Write your lesson content here.</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end align-items-center mt-4 pt-3 border-top" style="border-color: var(--gray) !important;">
                            <button class="btn btn-primary px-5 @(wasSavingError ? "btn-error" : "")" 
                                    @onclick="Save"
                                    disabled="@(!IsDirty || isSaving)">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Save Changes
                            </button>
                        </div>
                    </div>
                    <StepNavigationButtons CurrentStep="@StepOrder" TotalSteps="@totalSteps" IsEditMode="true"
                        CanContinue="true" IsCreating="@isCreatingStep" ShowCreateError="@wasCreateError"
                        CreateErrorMessage="@createErrorMessage" OnPrevious="GoPrevious" OnNext="GoNext"
                        OnAddNewStep="AddNewStep" />
                    <div class="mb-5">
                        <button class="btn btn-outline-secondary" @onclick="BackToPreview">
                            <i class="fas fa-eye me-2"></i> Back to Preview
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
                <div class="alert alert-warning" role="alert">
                    You do not have permission to edit learning steps.
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
            <div class="alert alert-warning" role="alert">
                You must be logged in to edit learning steps.
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public int CourseId { get; set; }
    [Parameter] public int StepOrder { get; set; }

    private LearningStep? currentStep;
    private LearningStep? originalState;
    private int totalSteps = 1;

    private bool isLoading = true;
    private bool isSaving = false;
    private bool isCreatingStep = false;
    private bool wasError = false;
    private bool wasSavingError = false;
    private bool wasCreateError = false;
    private string? createErrorMessage = null;
    private bool IsDirty => currentStep != null && originalState != null &&
    (currentStep.Type != originalState.Type ||
    currentStep.Content != originalState.Content);
    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        wasError = false;

        try
        {
            var resultCourses = await CourseService.GetCourses();
            if (resultCourses.HasError)
            {
                NavToError();
                return;
            }

            var allCourses = resultCourses.Value ?? new List<Course>();
            var thisCourse = allCourses.FirstOrDefault(c => c.Id == CourseId);

            if (thisCourse != null && thisCourse.TotalSteps > 0)
                totalSteps = thisCourse.TotalSteps;

            var resultStep = await StepService.GetLearningStepAsync(CourseId, StepOrder);

            if (resultStep.HasError)
            {
                NavToError();
                return;
            }

            var fetched = resultStep.Value;
            if (fetched == null)
            {
                wasError = true;
                return;
            }

            originalState = fetched.DeepCopy();
            currentStep = fetched.DeepCopy();
        }
        catch
        {
            wasError = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OnTypeChanged(ChangeEventArgs e)
    {
        var newType = e.Value?.ToString() ?? "";
        if (currentStep != null)
        {
            currentStep.Type = newType;
            if (string.IsNullOrWhiteSpace(currentStep.Content) || IsDefaultContent(currentStep.Content))
            {
                currentStep.Content = GetTemplateForType(newType);
            }
        }
    }

    private string GetTemplateForType(string type)
    {
        return type switch
        {
            "Text" => "Enter your learning content here...",
            "Video" => "https://www.youtube.com/watch?v=...",
            "QuestionMC" => "Write your question here?|Correct Answer|Wrong Answer 1|Wrong Answer 2|Wrong Answer N",
            "QuestionFILL" => "The capital city of the Roman Empire was ___ .|Rome",
            _ => ""
        };
    }

    private bool IsDefaultContent(string content)
    {
        return content == "Work in progress - edit this step to add content." ||
               content == "Enter your learning content here..." ||
               content == "https://www.youtube.com/watch?v=..." || 
               content.Contains("|Correct Answer") ||
               content.Contains("|Wrong Answer 1") ||
               content.Contains("___ .|Rome");
    }

    private void GoPrevious()
    {
        if (StepOrder > 1)
            NavManager.NavigateTo($"/courses/{CourseId}/steps/{StepOrder - 1}/edit");
    }

    private void GoNext()
    {
        NavManager.NavigateTo($"/courses/{CourseId}/steps/{StepOrder + 1}/edit");
    }

    private async Task Save()
    {
        if (!IsDirty || currentStep == null) return;

        isSaving = true;
        try
        {
            var result = await StepService.UpdateLearningStepAsync(currentStep);

            if (result.HasError)
            {
                NavToError();
                wasSavingError = true;
                return;
            }

            originalState = currentStep.DeepCopy();
            wasSavingError = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving: {ex.Message}");
            wasSavingError = true;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task AddNewStep()
    {
        isCreatingStep = true;
        wasCreateError = false;
        createErrorMessage = null;
        StateHasChanged();

        try
        {
            var newStep = new LearningStep
            {
                CourseId = CourseId,
                StepOrder = totalSteps + 1,
                Type = "Text",
                Content = GetTemplateForType("Text")
            };

            var result = await StepService.CreateLearningStepAsync(newStep);

            if (result.HasError)
            {
                NavToError();
                wasCreateError = true;
                createErrorMessage = result.ErrorMessage;
                return;
            }

            totalSteps++;
            NavManager.NavigateTo($"/courses/{CourseId}/steps/{newStep.StepOrder}/edit");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating new step: {ex.Message}");
            wasCreateError = true;
            createErrorMessage = ex.Message;
        }
        finally
        {
            isCreatingStep = false;
        }
    }

    private void BackToPreview()
    {
        NavManager.NavigateTo($"/courses/{CourseId}/steps/{StepOrder}");
    }
    
    private void NavToError()
    {
        var returnUrl = Uri.EscapeDataString(NavManager.Uri);
        NavManager.NavigateTo($"/no-connection?returnUrl={returnUrl}");
    }
}